<p id="notice"><%= notice %></p>

<h1>Pedidos</h1>

<table>
  <thead>
    <tr>
      <th>Estado</th>
      <th>Quantidade</th>
      <th>Desconto</th>
      <th>Preco unitario</th>
      <th>Preco total</th>
      <th>Tipo</th>
      <th>Usuario</th>
      <th>Geral</th>
      <th>Carrinho</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pedidos.each do |pedido| %>
      <tr>
        <td><%= pedido.estado %></td>
        <td><%= pedido.quantidade %></td>
        <td><%= pedido.desconto %></td>
        <td><%= pedido.preco_unitario %></td>
        <td><%= pedido.preco_total %></td>
        <td><%= pedido.tipo %></td>
        <td><%= pedido.usuario_id %></td>
        <td><%= pedido.geral_id %></td>
        <td><%= pedido.carrinho_id %></td>
        <td><%= link_to 'Show', pedido %></td>
        <td><%= link_to 'Edit', edit_pedido_path(pedido) %></td>
        <td><%= link_to 'Destroy', pedido, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pedido', new_pedido_path %>
