<h1>Gerais</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descricao</th>
      <th>Classificacao</th>
      <th>Serviceable</th>
      <th>Preco</th>
      <th>Estado</th>
      <th>Loja</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gerais.each do |geral| %>
      <tr>
        <td><%= geral.nome %></td>
        <td><%= geral.descricao %></td>
        <td><%= geral.classificacao %></td>
        <td><%= geral.serviceable %></td>
        <td><%= geral.preco %></td>
        <td><%= geral.estado %></td>
        <td><%= geral.loja %></td>
        <td><%= link_to 'Show', geral %></td>
        <td><%= link_to 'Edit', edit_geral_path(geral) %></td>
        <td><%= link_to 'Destroy', geral, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

